<div class='container'>
  <h3 class='text-center'>Contact Us</h3>

  <%= form_for '/contacts' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  
    <%= f.label :email %>
    <%= f.text_field :email %>
  
    <%= f.label :contacts %>
    <%= f.text_area :contacts %>
    
    <%= f.submit 'Submit' %>
  <% end %>
</div>